<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<global-forwards>
		<forward name="error" path="/error.html" />
		<forward name="home" path="/" />
	</global-forwards>

	<!-- Action Mapping Definitions -->
    <action-mappings>								
		<action path="/login" type="edu.tw.login.LoginAction" />
		<action path="/logout" type="edu.tw.login.LogoutAction" />
		<action path="/unload" type="edu.tw.login.UnloadAction" />
		<action path="/forgetPassword" type="edu.tw.login.ForgetPassword" />
				
		<action path="/queryUser" type="edu.tw.user.QueryUser" />
		<action path="/resetPassword" type="edu.tw.user.ResetPassword" />		
		<action path="/preQ" type="edu.tw.test.PreQuestionnaire" />
		<action path="/postQ" type="edu.tw.test.PostQuestionnaire" />
		<action path="/queryPostQ" type="edu.tw.test.QueryPostQuestionnaire" />
		
		<action path="/post" type="edu.tw.task.PostEvidence" />
		<action path="/queryEvidence" type="edu.tw.task.QueryEvidence" />
		<action path="/queryEvidenceAll" type="edu.tw.task.QueryEvidenceAll" />
		<action path="/queryEvidenceLast" type="edu.tw.task.QueryEvidenceLast" />
		<action path="/editEvidence" type="edu.tw.task.EditEvidence" />
		<action path="/deleteEvidence" type="edu.tw.task.DeleteEvidence" />		
		<action path="/postConclusion" type="edu.tw.task.PostConclusion" />
		<action path="/postConclusionFinal" type="edu.tw.task.PostConclusionFinal" />
		
		<action path="/queryConclusion" type="edu.tw.task.QueryConclusion" />
		<action path="/queryReply" type="edu.tw.task.QueryReply" />
		<action path="/queryReplyAll" type="edu.tw.task.QueryReplyAll" />
		<action path="/markRead" type="edu.tw.task.MarkRead" />
		<action path="/queryAdmin" type="edu.tw.task.QueryAdmin" />
		<action path="/updateAdmin" type="edu.tw.task.UpdateAdmin" />
		<action path="/checkEvidence" type="edu.tw.task.CheckEvidence" />
		<action path="/queryCheckEvidence" type="edu.tw.task.QueryCheckEvidence" />

			
    </action-mappings>
</struts-config>


